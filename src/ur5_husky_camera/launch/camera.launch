<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="rosbag" default="false" />
    <arg name="delay" default="0.0" /> <!-- Время задержки для получения данных с камеры -->

    <node name="camera_node" pkg="ur5_husky_camera" type="camera.py" output="screen">
        <param name="rosbag" type="bool" value="$(arg rosbag)"/>
        <param name="delay" type="double" value="$(arg delay)"/> <!--  Задержка в секундах -->
    </node>

    <!-- Подключение Webserver rosbridge -->
    <!-- <include file="$(find rosbridge_server)/launch/rosbridge_websocket.launch"/> -->
</launch>
